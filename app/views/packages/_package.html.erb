<li id="package-<%= package.id %>">
  <%= link_to gravatar_for(package.user, size: 50), package.user %>
  <span class="user"><%= link_to package.user.name, package.user %></span>
  <span class="content">
    <%= package.adress %><br>
    <strong><%= package.check_status %></strong>
  </span>
  <span class="timestamp">
    <% if current_user?(package.user) %>
      <% if package.status == false %>
        <%= link_to "update", package, method: :update %>
      <% end %>
    <% end %>
    <% if current_user.admin? %>
      <%= link_to "delete", package, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
